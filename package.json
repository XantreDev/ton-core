{
    "name": "@ton/core",
    "version": "0.62.0",
    "main": "dist/index.js",
    "repository": "https://github.com/ton-org/ton-core.git",
    "author": "Whales Corp. <developers@whalescorp.com>",
    "license": "MIT",
    "files": [
        "dist",
        "src",
        "!*.test.*",
        "!*.spec.*",
        "!*.trait.*",
        "!__snapshots__",
        "!__testdata__",
        "!__tests__"
    ],
    "scripts": {
        "build": "rm -fr dist && tsc -p ./tsconfig.build.json",
        "test": "jest --verbose",
        "typecheck": "tsc",
        "format": "biome format --write .",
        "format:check": "biome format .",
        "coverage": "jest --verbose -c ./jest-coverage.config.js",
        "release": "yarn build && yarn test && yarn release-it --npm.yarn1"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@release-it/keep-a-changelog": "^3.1.0",
        "@swc/core": "catalog:",
        "@swc/jest": "catalog:",
        "@ton/crypto": "catalog:",
        "@types/jest": "catalog:",
        "@types/node": "catalog:",
        "jest": "catalog:",
        "release-it": "catalog:"
    },
    "peerDependencies": {
        "@ton/crypto": ">=3.2.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "release-it": {
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/keep-a-changelog": {
                "filename": "CHANGELOG.md"
            }
        }
    }
}
